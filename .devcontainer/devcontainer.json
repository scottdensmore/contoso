{
  "hostRequirements": {
    "cpus": 4
  },
  "postAttachCommand": {
    "server": "npm install && npm run dev"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/components/header.tsx",
        "src/lib/validationHelper.ts",
        "src/lib/messages.json"
      ]
    },
    "vscode": {
      "extensions": [
        // "GitHub.copilot-chat",
        // "GitHub.copilot"
        "google.geminicodeassist"
      ]
    }
  },
  "portsAttributes": {
    "5173": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [3000]
}
