{
  "name": "contoso-monorepo",
  "private": true,
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "bootstrap": "make bootstrap",
    "doctor": "make agent-doctor",
    "dev": "make dev",
    "dev:web": "make -C apps/web dev",
    "dev:chat": "make -C services/chat dev",
    "setup:web": "make -C apps/web setup",
    "setup:chat": "make -C services/chat setup",
    "setup": "npm run setup:web && npm run setup:chat",
    "lint:web": "make -C apps/web lint",
    "typecheck:web": "make -C apps/web typecheck",
    "test": "make test",
    "test:web": "make -C apps/web test",
    "test:chat": "make -C services/chat test",
    "test:chat:integration": "make -C services/chat test-integration",
    "build:web": "make -C apps/web build",
    "prisma:generate": "make -C apps/web prisma-generate",
    "migrate": "make -C apps/web migrate",
    "docs:check": "make docs-check",
    "quick-ci": "make quick-ci",
    "quick-ci:web": "make -C apps/web quick-ci",
    "quick-ci:chat": "make -C services/chat quick-ci",
    "ci": "make ci",
    "ci:web": "make -C apps/web ci",
    "ci:chat": "make -C services/chat ci"
  }
}
