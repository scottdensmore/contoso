{
  "name": "contoso-monorepo",
  "private": true,
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev": "make dev",
    "dev:web": "npm run dev -w apps/web",
    "dev:chat": "make -C services/chat dev",
    "setup:web": "npm --prefix apps/web ci",
    "setup:chat": "make -C services/chat setup",
    "setup": "npm run setup:web && npm run setup:chat",
    "lint:web": "npm run lint -w apps/web",
    "typecheck:web": "make typecheck",
    "test": "make test",
    "test:web": "npm run test -w apps/web",
    "test:chat": "make -C services/chat test",
    "test:chat:integration": "make -C services/chat test-integration",
    "build:web": "npm run build -w apps/web",
    "prisma:generate": "make prisma-generate",
    "migrate": "make migrate",
    "docs:check": "make docs-check",
    "quick-ci": "make quick-ci",
    "quick-ci:web": "make quick-ci-web",
    "quick-ci:chat": "make -C services/chat quick-ci",
    "ci": "make ci",
    "ci:web": "npm run lint:web && npm run typecheck:web && npm run test:web && npm run build:web",
    "ci:chat": "make -C services/chat ci"
  }
}
